<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/originSpinner"
        android:entries="@array/originEntries"
        android:drawSelectorOnTop="true"/>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true">
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentTop="true"
	        android:text="@string/name" 
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="5dp"
	        android:id="@+id/name"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/name"
			android:layout_centerHorizontal="true"
	      	android:text="@string/assign" 
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="5dp"
	        android:id="@+id/assign"/>
	    <Spinner 
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="5dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/assign"
	        android:entries="@array/urlEntries"
	        android:id="@+id/spinner"
	        android:drawSelectorOnTop="true"/>
	    <EditText 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/spinner"
			android:layout_centerHorizontal="true"
	        android:id="@+id/urlBox"
	        android:hint="@string/urlHint"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="5dp"
	        android:inputType="textUri"/>
	    <Button 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/urlBox"
			android:layout_centerHorizontal="true"
	      	android:text="View File" 
	        android:id="@+id/startButton"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="5dp"
	        android:onClick="openFile"/>
	    <Button 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/startButton"
			android:layout_centerHorizontal="true"
	      	android:text="Animate File" 
	        android:id="@+id/showButton"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="5dp"
	        android:onClick="openDisplay"/>
    </RelativeLayout>
</RelativeLayout>